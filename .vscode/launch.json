    "version": "0.2.0",
    "configurations": [
        {
            "name": "debugger-worker",
            "type": "debugpy",
            "request": "attach",
            "connect": {
                "host": "localhost",
                "port": 5678
            },
            "pathMappings": [
                {
                    "localRoot": "${workspaceFolder}",
                    "remoteRoot": "/app"
                }
            ]
        },
        {
            "name": "debugger-server",
            "type": "debugpy",
            "request": "attach",
            "connect": {
                "host": "localhost",
                "port": 5679
            },
            "pathMappings": [
                {
                    "localRoot": "${workspaceFolder}",
                    "remoteRoot": "/app"
                }
            ]
        },
        {
            "name": "Simulation",
            "type": "debugpy",
            "request": "launch",
            "program": "${workspaceFolder}/util/simulation.py",
            "args": ["${input:simulationLineName}", "${input:simulationOrganisationId}"],
            "console": "integratedTerminal",
            "python": "${workspaceFolder}/venv/Scripts/python.exe",
            "envFile": "${workspaceFolder}/dev.env"
        }
    ],
    "inputs": [
        {
            "id": "simulationLineName",
            "type": "promptString",
            "description": "Enter the line name to start the simulation"
        },
        {
            "id": "simulationOrganisationId",
            "type": "promptString",
            "default": "TEST",
            "description": "Enter the organisation ID to start the simulation"
        }
    ]
}